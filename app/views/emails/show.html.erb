<div class="container show-email">
  <% if notice %>
  <div class="alert alert-success">
    <p id="notice"><%= notice %></p>
  </div>
  <% end %>

  <p>
    <strong>To:</strong>
    <%= @email.to %>
  </p>

  <p>
    <strong>Subject:</strong>
    <%= @email.subject %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= @email.body %>
  </p>

  <p>
    <strong>Send date time:</strong>
    <%= @email.send_date_time %>
  </p>

  <%= link_to '<< Back', emails_path %>
</div>
