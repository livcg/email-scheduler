<p id="notice"><%= notice %></p>

<h1>FutureMail</h1>

<div>
<button type='button' class='btn btn-lg btn-default'><%= link_to 'Send an email in the future!', new_email_path %></button>
</div>

<hr/>

<h2>Scheduled Emails</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>To</th>
      <th>Subject</th>
      <th>Body</th>
      <th>Send date &amp; time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.to %></td>
        <td><%= email.subject %></td>
        <td><%= email.body %></td>
        <td><%= email.send_date_time %></td>
        <td><%= link_to 'View', email %></td>
        <td><%= link_to 'Delete', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr/>

<h2>Sent Emails</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>To</th>
      <th>Subject</th>
      <th>Body</th>
      <th>Sent date &amp; time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sentemails.each do |email| %>
      <tr>
        <td><%= email.to %></td>
        <td><%= email.subject %></td>
        <td><%= email.body %></td>
        <td><%= email.send_date_time %></td>
        <td><%= link_to 'View', email %></td>
        <td><%= link_to 'Delete', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

